<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Sigura Kost</title>
    <link rel="stylesheet" href="/css/styleRegist.css">
</head>
<body>

    <!-- Vintage Decorations -->
    <div class="vintage-decoration decoration-1"></div>
    <div class="vintage-decoration decoration-2"></div>
    <div class="vintage-decoration decoration-3"></div>
    <div class="vintage-decoration decoration-4"></div>

    <div class="register-wrap">
        <form action="/auth/register" method="POST" class="register-form" id="registerForm">
            <h2>Daftar Akun Sigura Kost</h2>

            <div id="message-container"></div>

            <div class="form-group">
                <label for="nama_user">Nama Lengkap</label>
                <input type="text" id="nama_user" name="nama_user" placeholder="Masukkan nama lengkap Anda" required>
            </div>

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Buat username unik" required>
                <div id="username-feedback"></div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Buat password yang kuat" required>
                <button type="button" class="password-toggle" id="togglePassword">ğŸ‘</button>
                <div class="password-strength" id="passwordStrength"></div>
            </div>

            <button type="submit" class="btn">
                <span>Daftar Sekarang</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19"
                          stroke="currentColor" stroke-width="2"
                          stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>

            <div class="register-footer">
                <p>Sudah punya akun? <a href="/auth/login">Login di sini</a></p>
                <a href="/">Kembali ke menu beranda</a>
            </div>

        </form>
    </div>

    <script>
        // Password toggle
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');

        togglePassword.addEventListener('click', () => {
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                togglePassword.innerText = "ğŸ™ˆ";
            } else {
                passwordInput.type = "password";
                togglePassword.innerText = "ğŸ‘";
            }
        });
    </script>

</body>
</html>
